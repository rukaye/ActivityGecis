<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Kullanıcı Adı:" />
    <EditText
        android:id="@+id/kullanici"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"></EditText>

</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Şifre:" />

            <EditText
                android:id="@+id/sifre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:inputType="textPassword"></EditText>
        </LinearLayout>
    <RadioGroup
        android:id="@+id/rg_cinsiyet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_erkek"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Erkek"></RadioButton>
        <RadioButton
            android:id="@+id/rb_kadin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Kadın"></RadioButton>
    </RadioGroup>
    <Button
        android:id="@+id/btn_gonder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gönder"></Button>
</LinearLayout>